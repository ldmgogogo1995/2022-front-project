{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "node",
        "target": "esnext",
        "allowSyntheticDefaultImports": true,
        "strict": false,
        "sourceMap": true,
        "allowJs": true,
        "baseUrl": ".",
        "jsx": "react",
        "outDir": "./",
        "resolveJsonModule": true,
        "paths": {
            "@/*": [
                "./src/*"
            ],
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/*",
        "dist"
    ]
}